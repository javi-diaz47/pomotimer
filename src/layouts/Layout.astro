---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/700.css";

import { HeaderNavbar } from "../components/HeaderNavbar.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-primary text-4xl bg-neutral-100">
    <div class="max-w-2xl flex flex-col gap-8">
      <header
        class="flex justify-between px-4 bg-white py-2 shadow-neutral-200 shadow-lg"
      >
        <a href="/" class="font-bold">
          Pomo<span class="text-red-400">Timer</span>
        </a>
        <HeaderNavbar client:visible />
      </header>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
