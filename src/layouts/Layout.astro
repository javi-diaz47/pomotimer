---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/700.css";

import { HeaderNavbar } from "../components/HeaderNavbar.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-primary text-4xl bg-neutral-100">
    <header
      class="flex justify-between px-4 max-w-2xl bg-white py-2 shadow-neutral-200 shadow-lg mb-8"
    >
      <a href="/" class="font-bold">
        Pomo<span class="text-red-400">Timer</span>
      </a>
      <HeaderNavbar client:visible />
    </header>
    <slot />
  </body>
</html>

<style is:global>
  @keyframes progress {
    from {
      stroke-dasharray: 0 2390;
    }
    to {
      stroke-dasharray: 2390 2390;
    }
  }

  @keyframes in {
    from {
      cx: 200px;
      r: 380px;
    }
    to {
      cx: 400px;
      r: 380px;
    }
  }

  @keyframes out {
    from {
    }
    to {
      r: 30px;
      stroke-dasharray: 0 2390;
    }
  }

  .progress {
    animation:
      in 0.5s cubic-bezier(0.5, 0.79, 0.74, 1.02) forwards,
      progress 2s linear 0.5s forwards,
      out 0.8s ease-in-out 2.5s forwards;
  }
</style>
